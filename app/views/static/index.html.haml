- content_for :meta do
  %title Max Tiu
  %meta{name: 'description', content: "Max Tiu is a full-stack web developer and engineering leader based in Atlanta, Georgia."}

.container.home
  .photo
    %a{:href => '/'}
      = image_tag 'me.jpg', class: 'img-responsive img-circle me-pic',
        alt: 'Max Tiu'
  %h1.name Max Tiu
  = render 'shared/social_icons'
  .description
    %p
      I'm a full-stack web developer, engineering leader, and educator in Atlanta, GA
      serving as a Director of
      %a{href: 'http://rubycentral.org/'} Ruby Central.
  .links
    = render 'shared/links'
